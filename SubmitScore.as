package  {	import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.IOErrorEvent;	import flash.text.TextField;	import flash.net.URLRequest;	import flash.net.URLVariables;	import flash.net.URLLoader;	import flash.errors.IOError;		public class SubmitScore extends Sprite {				private var _score:int;		private var _name:String;		private var _inputName:TextField;		public function SubmitScore(score) {			_score = score;						addChild(Static.bitmap(new Menubg()));			addChild(Static.bitmap(new Smallframe()));			addHUD();		}				private function addHUD():void {			var textFormat = Static.textFormat;						var submitScore_tf:TextField = Static.textField('Submit score', 36);			submitScore_tf.y = 90;			addChild(submitScore_tf);						var currentScore_tf:TextField = Static.textField('Score: ' + _score.toString());			currentScore_tf.y = 150;			addChild(currentScore_tf);						var name_tf:TextField = Static.textField('Name:');			name_tf.x = 100;			name_tf.y = 200;			addChild(name_tf);						var submitBox:Bitmap = Static.bitmap(new Input(50, 50));			submitBox.x = submitBox.y = 200;			addChild(submitBox);						_inputName = Static.textField('', 16);			_inputName.type = 'input';			_inputName.autoSize = 'none';			_inputName.selectable = true;			_inputName.width = 120;			_inputName.height = 25;			_inputName.y = 200;			_inputName.x = 205;			addChild(_inputName);						var submitButton:Bitmap = Static.bitmap(new Submit(50, 50));			submitButton.y = 250;			addChild(submitButton);						var submit_tf:TextField = Static.textField('Submit', 30);			submit_tf.y = 246;			submit_tf.addEventListener(MouseEvent.CLICK, handleSubmitClick);			addChild(submit_tf);		}				private function handleSubmitClick(e:MouseEvent):void {			_name = _inputName.text;			var url:String = Static.scoreURL;			var req:URLRequest = new URLRequest(url);			req.method = 'POST';						var sending:URLVariables = new URLVariables();			sending.name = _name;			sending.score = _score;						req.data = sending;						var loader:URLLoader = new URLLoader(req);			loader.addEventListener(Event.COMPLETE, handleSendScore);			loader.addEventListener(IOErrorEvent.IO_ERROR, handleError);					}				private function handleSendScore(e:Event):void {			dispatchEvent(new Event('scoreSubmitted'));		}				private function handleError(e:IOErrorEvent):void {			//please make sure that the reference to score.php in Static.as is correct as per my instructions in README.txt			trace('An error?');		}	}	}