package  {		import flash.display.Bitmap;	import flash.display.Sprite;	import flash.events.Event;	import flash.text.TextField;		public class Main extends Sprite {				private var _mainMenu:MainMenu;		private var _game:Game;		private var _scoreList:ScoreList;		private var _submitScore:SubmitScore;		private var _howTo:HowTo;		private var _mainBg:Bitmap;		private var _menuBg:Bitmap;		public function Main() {			setupBackgrounds();			loadMenu();			addTitle();		}				private function setupBackgrounds():void {			_mainBg = Static.bitmap(new Mainbg(50, 50));			addChild(_mainBg);						_menuBg = Static.bitmap(new Menubg(50, 50));			addChild(_menuBg);		}				private function addTitle():void {			//title textfield			var title_tf:TextField = Static.textField('SameBricks', 48);			title_tf.y = 40;			addChild(title_tf);		}				private function loadMenu():void {			_mainMenu = new MainMenu();			addChild(_mainMenu);						_mainMenu.addEventListener('startGameClicked', startGameClicked);			_mainMenu.addEventListener('highScoresClicked', highScoresClicked);			_mainMenu.addEventListener('howToClicked', howToClicked);					}				private function howToClicked(e:Event):void {			removeChild(_mainMenu);			_howTo = new HowTo();			_howTo.addEventListener('menuBackClick', menuBackClick);			addChild(_howTo);		}				private function startGameClicked(e:Event):void {			removeChild(_mainMenu);			_mainMenu = null;			//removeChild(_menuBg);			_game = new Game();			_game.addEventListener('submitScoresClicked', submitScoresClicked);			addChild(_game);		}				private function highScoresClicked(e:Event):void {			removeChild(_mainMenu);			_mainMenu = null;			_scoreList = new ScoreList();			_scoreList.addEventListener('menuBackClick', menuBackClick);			addChild(_scoreList);		}				private function menuBackClick(e:Event):void {			removeChild(e.target as Sprite);			loadMenu();		}				private function submitScoresClicked(e:Event):void {			removeChild(_game);			_submitScore = new SubmitScore(_game.score);			_submitScore.addEventListener('scoreSubmitted', scoreSubmitted);			addChild(_submitScore);		}				private function scoreSubmitted(e:Event):void {			removeChild(_submitScore);			_scoreList = new ScoreList();			_scoreList.addEventListener('menuBackClick', menuBackClick);			addChild(_scoreList);		}	}//end class	}//end package