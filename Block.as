package  {	import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.Event;		public class Block extends Sprite {				private var _row:int;		private var _col:int;		private var _type:int;		private var _block:Bitmap;		public function Block() {			this.addEventListener(Event.REMOVED_FROM_STAGE, destroy);		}				private function destroy(e:Event):void {			removeChild(_block);			_block = null;			this.removeEventListener(Event.REMOVED_FROM_STAGE, destroy);		}				public function setType(theType:int):void {			var xPos:int = (this.width / 2) - (25 / 2);			var yPos:int = (this.height / 2) - (25 / 2);			switch(theType) {				case 1:					_block = Static.bitmap(new Green());				break;								case 2:					_block = Static.bitmap(new Blue());				break;								case 3:					_block = Static.bitmap(new Yellow());				break;								case 4:					_block = Static.bitmap(new Red());				break;			}			addChild(_block);			_block.x = xPos;			_block.y = yPos;		}				public function set type(val:int):void {			_type = val;		}				public function set col(val:int):void {			_col = val;		}				public function set row(val:int):void {			_row = val;		}				public function get type():int {			return _type;		}				public function get row():int {			return _row;		}				public function get col():int {			return _col;		}	}	}